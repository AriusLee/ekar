      <% end %>
      <% if current_page?(infos_about_path) %>
        <%= link_to "About", infos_about_path, class: "active" %>
      <% else %>
        <%= link_to "About", infos_about_path %>
      <% end %>
      <% if current_page?(infos_developments_path) %>
        <%= link_to "Developments", infos_developments_path, class: "active" %>
      <% else %>
        <%= link_to "Developments", infos_developments_path %>
      <% end %>
      <% if current_page?(infos_tribute_path) %>
        <%= link_to "Tribute", infos_tribute_path, class: "active" %>
      <% else %>
        <%= link_to "Tribute", infos_tribute_path %>
      <% end %>
      <% if current_page?(infos_career_path) %>
        <%= link_to "Careers", infos_career_path, class: "active" %>
      <% else %>
        <%= link_to "Careers", infos_career_path %>
      <% end %>
      <% if current_page?(infos_contact_path) %>
        <%= link_to "Contact", infos_contact_path, class: "active" %>
      <% else %>
        <%= link_to "Contact", infos_contact_path %>
      <% end %>


    </div>
  </div>
</header>

<script>
  $(document).ready(function() {
    $('.navbar').stickyNavbar();
  });
</script>
