<section id="contact-section">

  <div class="container">

    <h1>Contact Us</h1>
    <p>Any question? Leave us a message using the form below.</p>

    <div class="form-holder">
      <%= form_tag '/contact_us' do %>
      <form>
        <div class="row">
          <div class="col-sm-6">
            <%= text_field_tag 'name', '', class: "form-control input-lg", required: 'true', placeholder: 'Your Name' %>
          </div>
          <div class="col-sm-6">
            <%= email_field_tag 'email', '', class: "form-control input-lg", required: 'true', placeholder: 'Your Email' %>
          </div>
          <div class="col-sm-12">
            <%= text_area_tag 'message', '', class: "form-control input-lg", required: 'true', placeholder: 'Your Message' %>
          </div>
          <div class="col-sm-6 text-right">
            <input type="submit" value="Send" class="btn btn-lg btn-primary btn-block">
          </div>
        </div>
      <% end %>
    </div>
  </div>

</section>
